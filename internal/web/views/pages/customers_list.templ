	return []CustomerRow{
		{"1", "James S. Jackson", "Male", "https://i.pravatar.cc/150?u=james", "james.jack@mail.com", "845-346-8904", 24, "$465", true, "29 Mar 2024"},
		{"2", "Nancy J. Schlueter", "Female", "https://i.pravatar.cc/150?u=nancy", "nancy.schlueter@mail.com", "703-776-8514", 21, "$630", true, "29 Apr 2024"},
