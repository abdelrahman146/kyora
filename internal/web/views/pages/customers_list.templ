templ CustomersListQuickActions() {
	<a href="/customers/new" class="btn btn-primary">
		<i data-feather="plus" class="h-4 w-4"></i>
		New Customer
	</a>
}

templ CustomersList() {
	@layouts.AppLayout() {
		<div class="space-y-6">
			// Page Header
			@components.PageHeader(CustomersListQuickActions())
			// Filters and Search
			<div class="flex flex-col sm:flex-row gap-2">
				<div class="input input-bordered flex items-center gap-2 flex-grow">
					<i data-feather="search" class="h-4 w-4 text-base-content/50"></i>
					<input type="text" class="grow" placeholder="Search by customer name..."/>
				</div>
				<select class="select select-bordered w-full sm:w-auto">
					<option disabled selected>Verification Status</option>
					<option>Verified</option>
					<option>Not Verified</option>
				</select>
			</div>
			// Customers Table
			<div class="card bg-base-100 shadow">
				<div class="overflow-x-auto">
					<table class="table">
						<thead>
							<tr>
								<th>Name</th>
								<th>Email</th>
								<th>Sales</th>
								<th>Earning</th>
								<th>Verified</th>
								<th>Joined Date</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
							for _, customer := range getMockCustomers() {
								<tr>
									<td>
										<div class="flex items-center gap-3">
											<div class="avatar">
												<div class="mask mask-squircle h-12 w-12">
													<img src={ customer.ImageURL } alt={ customer.Name }/>
												</div>
											</div>
											<div>
												<div class="font-bold">{ customer.Name }</div>
												<div class="text-sm opacity-50">{ customer.Gender }</div>
											</div>
										</div>
									</td>
									<td>{ customer.Email }</td>
									<td>{ fmt.Sprintf("%d", customer.Sales) }</td>
									<td class="font-semibold">{ customer.Earning }</td>
									<td>
										if customer.Verified {
											<i data-feather="check-circle" class="h-5 w-5 text-success"></i>
										}
									</td>
									<td>{ customer.Joined }</td>
									<td>
										<div class="flex gap-1">
											<a href={ templ.URL("/customers/" + customer.ID + "/edit") } class="btn btn-ghost btn-xs btn-circle">
												<i data-feather="edit" class="h-4 w-4"></i>
											</a>
											<button class="btn btn-ghost btn-xs btn-circle text-error">
												<i data-feather="trash-2" class="h-4 w-4"></i>
											</button>
										</div>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	}
}
